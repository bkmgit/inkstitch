        {% else %}
          <span class="nav__sub-title">{{ nav.title }}</span>
        {% endif %}

        {% if nav.children != null %}
        <ul>
          {% for child in nav.children %}
            <li><a href="{{ child.url | relative_url }}" class="nav__item{% if child.url == page.url %} active{% endif %} {{ child.class }}">{{ child.title }}</a></li>
          {% endfor %}
